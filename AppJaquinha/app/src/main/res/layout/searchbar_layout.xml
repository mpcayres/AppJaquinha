<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:background="@color/white">

    <AutoCompleteTextView
        android:background="@color/white"
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Digite o local buscado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColorHighlight="@color/colorAccentLight"
        android:textColor="@color/black"
        android:textColorHint="@color/design_fab_shadow_start_color"
        android:text=""
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="66dp"
        android:paddingEnd="66dp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:scrollHorizontally="true">

    </AutoCompleteTextView>

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/ic_clear"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/xlimpa"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_search_material_black"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/lupaSearch"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:scaleType="centerInside"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

</RelativeLayout>
